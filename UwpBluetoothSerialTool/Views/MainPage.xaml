<Page
    x:Class="UwpBluetoothSerialTool.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            x:Uid="Main_Title"
            Style="{StaticResource PageTitleStyle}" />
        <Grid
            Grid.Row="1" 
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <!--
                The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.
            -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                <ComboBox
                    x:Name="DevicesComboBox"
                    ItemsSource="{x:Bind Devices}"
                    IsEnabled="{x:Bind Disconnected, Mode=OneWay}"
                    Header="Paired Bluetooth Serial Devices"
                    PlaceholderText="Pick a paired Bluetooth Serial Device"
                    Width="Auto" SelectionChanged="DevicesComboBox_SelectionChanged"
                    ToolTipService.ToolTip="{x:Bind Device.Id, Mode=OneWay}">
                </ComboBox>
                <RelativePanel HorizontalAlignment="Right">
                    <Button
                        x:Name="RefreshButton"
                        Margin="8,8,0,0"
                        Click="RefreshButton_Click"
                        IsEnabled="{x:Bind Disconnected, Mode=OneWay}">
                        <TextBlock Text="Refresh"></TextBlock>
                    </Button>
                    <Button
                        x:Name="ConnectButton"
                        RelativePanel.RightOf="RefreshButton"
                        Margin="8,8,0,0"
                        Click="ConnectButton_Click"
                        IsEnabled="{x:Bind Disconnected, Mode=OneWay}">
                        <TextBlock Text="Connect"></TextBlock>
                    </Button>
                    <Button
                        x:Name="DisconnectButton"
                        RelativePanel.RightOf="ConnectButton"
                        Margin="8,8,0,0" Click="DisconnectButton_Click"
                        IsEnabled="{x:Bind Connected, Mode=OneWay}">
                        <TextBlock Text="Disconnect"></TextBlock>
                    </Button>
                </RelativePanel>
                <TextBlock Text="Data to send - text sent as UTF-8"></TextBlock>
                <TextBox
                    Name="SendTextBox"
                    Height="120"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"></TextBox>
                <CheckBox Name="SendTextBoxContainsHex">
                    <TextBlock Text="Convert to binary - text is in hexadecimal"></TextBlock></CheckBox>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Pick end of line" VerticalAlignment="Center"></TextBlock>
                    <RadioButton
                        Name="EndOfLineDos"
                        IsChecked="True"
                        Margin="8,0,0,0"
                        GroupName="EndOfLine">
                        <TextBlock Text="DOS (Carriage return-Newline)"></TextBlock>
                    </RadioButton>
                    <RadioButton
                        Name="EndOfLineMacOs"
                        Margin="8,0,0,0"
                        GroupName="EndOfLine">
                        <TextBlock Text="macOS (Carriage return)"></TextBlock>
                    </RadioButton>
                    <RadioButton
                        Name="EndOfLineUnix"
                        Margin="8,0,0,0"
                        GroupName="EndOfLine">
                        <TextBlock Text="Unix (Newline)"></TextBlock>
                    </RadioButton>
                </StackPanel>
                <Button
                    Name="SendButton"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0"
                    IsEnabled="{x:Bind Connected, Mode=OneWay}"
                    Click="SendButton_Click">
                    <TextBlock Text="Send"></TextBlock>
                </Button>
                <TextBlock Text="Data Received"></TextBlock>
                <TextBox
                    Name="DataReceivedTextBox"
                    Height="Auto" MinHeight="120"
                    MaxHeight="240"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    IsReadOnly="True"></TextBox>
                <CheckBox Name="ShowReceivedDataInHex">
                    <TextBlock Text="Show data in hexadecimal"></TextBlock>
                </CheckBox>
                <Button HorizontalAlignment="Right" Margin="0,8,0,0" Click="Button_Click">
                    <TextBlock Text="Clear"></TextBlock>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
